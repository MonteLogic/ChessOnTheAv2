<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ChessOnTheAv.ViewModels"
             xmlns:converters="clr-namespace:ChessOnTheAv.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ChessOnTheAv.Views.MainView"
             x:DataType="vm:MainViewModel">
    
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <converters:SquareColorConverter x:Key="SquareColorConverter"/>
        <converters:PieceColorConverter x:Key="PieceColorConverter"/>
        <converters:ChessPieceImageConverter x:Key="ChessPieceImageConverter"/>
        <converters:BoardSizeDisplayConverter x:Key="BoardSizeDisplayConverter"/>
        <converters:WindowSizeDisplayConverter x:Key="WindowSizeDisplayConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Chess Board Area -->
        <Border Grid.Column="0" Background="#2C2C2C" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Column letters (a-h) at the top -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="a" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="b" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="c" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="d" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="e" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="f" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="g" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="h" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Row numbers (8-1) on the left side -->
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="8" Foreground="White" FontSize="18" FontWeight="Bold" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="7" Foreground="White" FontSize="18" FontWeight="Bold" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="6" Foreground="White" FontSize="18" FontWeight="Bold" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="5" Foreground="White" FontSize="18" FontWeight="Bold" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="4" Foreground="White" FontSize="18" FontWeight="Bold" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="3" Foreground="White" FontSize="18" FontWeight="Bold" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="2" Foreground="White" FontSize="18" FontWeight="Bold" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1" Foreground="White" FontSize="18" FontWeight="Bold" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Chess board -->
                <Grid Grid.Row="1" Grid.Column="1" 
                      Width="480" 
                      Height="480" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center">
                    <ItemsControl ItemsSource="{Binding Squares}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="8" Columns="8"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="60" 
                                        Height="60" 
                                        BorderBrush="Black" BorderThickness="1"
                                        PointerPressed="Square_PointerPressed">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding IsLightSquare, Converter={StaticResource SquareColorConverter}}"/>
                                    </Border.Background>
                                    <TextBlock Text="{Binding Piece}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               FontSize="24"
                                               Foreground="White"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!-- Column letters (a-h) at the bottom -->
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="a" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="b" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="c" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="d" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="e" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="f" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="g" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                    <TextBlock Text="h" Foreground="White" FontSize="18" FontWeight="Bold" Width="60" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Column="1" Background="#1E1E1E" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="20">
                    <!-- Game Status -->
                    <Border Background="#333333" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Game Status" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <StackPanel Spacing="5">
                                <TextBlock Text="{Binding CurrentPlayerText}" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="{Binding GameStatusText}" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Controls -->
                    <Border Background="#333333" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Controls" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <StackPanel Spacing="10">
                                <Button Content="New Game Position" 
                                        Background="#4CAF50" 
                                        Foreground="White" 
                                        Padding="10,5"
                                        Click="NewPosition_Click"/>
                                <Button Content="Reset Board" 
                                        Background="#FF9800" 
                                        Foreground="White" 
                                        Padding="10,5"
                                        Click="ResetBoard_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Move History -->
                    <Border Background="#333333" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Move History" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding MoveHistoryText}"
                                           Foreground="White"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!-- Instructions -->
                    <Border Background="#333333" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Instructions" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock Text="• Click on a piece to select it&#x0A;• Click on a highlighted square to move&#x0A;• Practice chess tactics and strategy"
                                       Foreground="White" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>